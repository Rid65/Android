<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewsDetailFragment"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <TextView
        android:id="@+id/news_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/textview_minmargin"/>

    <TextView
        android:id="@+id/news_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/textview_minmargin"/>

    <TextView
        android:id="@+id/news_detail_tournament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/textview_minmargin"/>

    <TextView
        android:id="@+id/news_detail_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/textview_minmargin"/>

    <TextView
        android:id="@+id/prediction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/textview_minmargin"/>

    <TextView
        android:id="@+id/news_detail_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/default_margin"
        android:scrollbars="vertical"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/news_detail_article_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textview_minmargin">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>